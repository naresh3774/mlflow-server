apiVersion: apps/v1
kind: Deployment
metadata:
  name: minio-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: minio
  template:
    metadata:
      labels:
        app: minio
    spec:
      containers:
      - name: minio
        image: minio/minio:latest
        args: ["server", "/data"]
        ports:
        - containerPort: 9000
        env:
        - name: MINIO_ACCESS_KEY
          value: "{{ minio_access_key }}"
        - name: MINIO_SECRET_KEY
          value: "{{ minio_secret_key }}"
        volumeMounts:
        - name: minio-data
          mountPath: /data